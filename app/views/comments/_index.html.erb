
<% restaurant.comments.each do |comment| %>
  <div class="form-input">
    <%= comment.nickname%>
    <%= comment.comment%>
  </div>
<% end %>

<%= form_with model: [@restaurant, @comment], class: 'form', local: true do |f| %>
  <div class="form-input">
    <%= f.text_field :nickname, class: 'comment-nickname', placeholder: 'ニックネーム' %>
    <%= f.text_field :comment, class: 'comment-comment', placeholder: 'コメント' %>
  </div>
  <%= f.submit '送信', class: 'comment-submit' %>
<% end %>

