<%# サイドバーの友達リスト＋ボタンクリックでnew.js.erbが発動し、この画面が表示される %>

<div class="friend-registration", id="friend-registration">
  <div id="friend-back", class="friend-back">
    <%#= link_to image_tag("batu.png", class: "batu.img", size: '30x30') %>
    <%= link_to "戻る", remote: true %>
  </div class="friend-lists">
    <% users.each do |user| %>
      <ul>
        <li>
          <%= user.group_name %>
          <% if current_user.following?(user) %>
            <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete %>
          <% else %>
            <%= link_to "フォローする", user_relationships_path(user.id), method: :post %>
          <% end %>
        </li>
      </ul>
    <% end %>
  </div>
</div>
