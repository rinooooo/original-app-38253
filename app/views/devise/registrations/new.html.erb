<header>
  <%= link_to image_tag("header-image.png", class:"title-image"), root_path %>
  <div class="devise">
    <% if user_signed_in? %>
      <%= link_to "#{current_user.group_name}さん", edit_user_registration_path, class:"user-name" %>
      <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %>
    <% else %>
      <%= link_to "新規登録", new_user_registration_path, class:"signin" %>
      <%= link_to "ログイン", new_user_session_path, class:"login" %>
    <% end %>
  </div>
</header>

<div class="wrapper">
  <div class="container">
  <div class="form">
    <h2>Sign up</h2>
    <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :group_name, autofocus: true, size: "30" %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", size: "30" %>
      </div>

      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "off", size: "30" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", size: "30" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>
    <% end %>
  </div>
  </div>
</div>
