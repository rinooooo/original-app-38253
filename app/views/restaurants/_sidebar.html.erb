<div class="sidebar">
  <div class="sidebar-content">
    <div class="restaurant-new">
      <h1><%= link_to '登録する', new_restaurant_path, remote: true %></h1>
    </div>
    <div class="reftaurant-search">      
      <h1>探す</h1>
        <div class="search-from-name">
          <h2>店名から探す</h2>
          <div class="search-form">
            <%= form_with(url: search_restaurants_path, local: true, method: :get, class: "search-form") do |form| %>
              <%= form.text_field :keyword, placeholder: "店名を検索する", class: "search-input" %>
              <%= form.submit "検索", class: "search-btn" %>
            <% end %>
          </div>
        </div>
        <div class="search-from-station">
          <h2>駅から探す</h2>
          <div class="station-list">
            <ul>
              <li class="tag">
                <%= link_to '全て', root_path %>
                <%= "(" %><%= restaurant_all.length %><%= ")" %>
              </li>
              <% tags.each do |tag| %>
              <li class="tag">
                <div>
                  <%= link_to tag.tag_name, tag_path(tag.id) %>
                  <%= "(" %><%= tag.restaurants.length %><%= ")" %>
                </div>
              </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

